    "chai": "^4.3.7",
    "ethers": "^6.8.1",
    "hardhat": "^2.26.3",
    "hardhat-gas-reporter": "^1.0.9",
    "solidity-coverage": "^0.8.5",
    "typechain": "^8.3.1"
